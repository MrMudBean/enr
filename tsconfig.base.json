{
  "compilerOptions": {
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "ES2016"],
    "preserveSymlinks": true, // 推荐 pnpm 用户添加
    "sourceMap": false
  }
}
